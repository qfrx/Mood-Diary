/* pages/word/word.wxss */

.card-list{  
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  padding: 0 12px;
}
.card-item{
  width: 45%;
  border: 1px solid #333;
  border-radius: 15px;
  margin-top: 12px;
}
.card-item .mood{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 0;
}
.card-item .mood image{
  width: 50px;
  height: 50px;
  margin-bottom: 10px;
}
.card-item .mood text{
  font-weight: bold;
  font-size: 16px;
}
.card-item .author{
  padding: 0 6px 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.card-item .author image{
  width: 20px;
  height: 20px;
  border-radius: 50%;
  margin-right: 5px;
}
.card-item .author>text{
  font-size: 12px;
}
.card-item .author .des{
  display: flex;
 align-items: center;
}
.card-item .author .name{
  font-size: 12px;
  zoom: .8;
}
.card-item .author .like{
  display: flex;
  align-items: center;
}
.card-item .author .like .iconfont{
  font-size: 14px;
}
.card-item .author .like .num{
  font-size: 12px;
  margin-left: 2px;
  zoom: .8;
}


